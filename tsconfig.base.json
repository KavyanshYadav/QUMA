{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022", "ESNext", "DOM"],
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@quma/config": ["packages/quma_config/src/index.ts"],
      "@quma/ddd": ["packages/quma_ddd/src/index.ts"],
      "@quma/types": ["packages/quma_types/src/index.ts"],
      "@quma/webkit": ["packages/frontend_web_kit/dist"]
    }
  },
  "include": ["packages/backend/src/**/*.ts"],
  "references": [
    {
      "path": "packages/quma_ddd"
    },
    {
      "path": "packages/quma_config"
    },
    {
      "path": "packages/quma_types"
    }
  ]
}
