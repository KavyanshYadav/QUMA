{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["dom", "dom.iterable", "esnext", "es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx",
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "jsxImportSource": "@emotion/reac",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "@quma/config": ["packages/quma_config/dist"],
      "@quma/db": ["packages/backend/src/db/index.ts"],
      "@quma/quma_ddd_base": ["packages/quma_ddd_base/dist"],
      "@quma/types": ["packages/quma_types/src/index.ts"],
      "@quma/quma_types": ["packages/quma_types/src/index.ts"],
      "@quma/webkit": ["packages/frontend_web_kit/dist"],
      "@quma_types/*": ["packages/quma_types/src/*"]
    }
  }
}
