{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "paths": {
      "@quma/ddd": ["../quma_ddd_base/dist/index.d.ts"],
      "@quma/ddd/*": ["../quma_ddd_base/dist/*"],
      "@quma/types": ["../quma_types/dist/index.d.ts"],
      "@quma/config": ["../quma_config/dist/index.d.ts"],
      "@quma/webkit": ["../frontend_web_kit/dist/index.d.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "references": [
    {
      "path": "../quma_types/tsconfig.lib.json"
    },
    {
      "path": "../quma_config/tsconfig.lib.json"
    },
    {
      "path": "../quma_ddd_base/tsconfig.lib.json"
    }
  ]
}
